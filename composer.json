{
    "name": "ybelenko/ogrn",
    "description": "Tiny library for validating OGRN and OGRNIP business identifiers in Russia.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "ogrn",
        "ogrnip",
        "validation",
        "business",
        "identifiers"
    ],
    "homepage": "https://github.com/ybelenko/ogrn",
    "authors": [
        {
            "name": "Yuriy Belenko",
            "email": "yura-bely@mail.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.3.3 || ^7.0",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ybelenko\\Ogrn\\": "src/ogrn/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ybelenko\\Ogrn\\": "tests/"
        }
    },
    "scripts": {
        "test": [            
            "@phpunit",
            "@phpcs",
            "@phpmd"
        ],
        "phpcs": "phpcs --standard=phpcs.xml --extensions=php --ignore=*/vendor/*,*/tests/* --encoding=utf-8 src/ -p -s",
        "phpcbf": "phpcbf --standard=phpcs.xml --extensions=php --ignore=*/vendor/*,*/tests/* --encoding=utf-8 src/",
        "phpmd": "phpmd src/ text cleancode,codesize,controversial,design,unusedcode",        
        "phpunit": "phpunit tests/",
        "coverage": "phpunit tests/ --whitelist src/ogrn/ --coverage-html coverage/"
    }
}
